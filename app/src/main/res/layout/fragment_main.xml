<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragment.MainFragment"
    android:background="@drawable/background_four">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/slider_viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"/>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/slider_indicator_unselected"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:ci_drawable="@drawable/unselected_slider"
        app:ci_drawable_unselected="@drawable/unselected_slider"
        app:layout_constraintBottom_toBottomOf="@id/slider_viewPager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/info_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:background="@drawable/background_radius_gradient"
        android:layout_marginHorizontal="@dimen/_50sdp"
        app:layout_constraintTop_toBottomOf="@id/slider_viewPager"
        android:layout_marginTop="@dimen/_10sdp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/info_card"
        app:layout_constraintBottom_toBottomOf="@id/info_card"
        app:layout_constraintStart_toStartOf="@id/info_card"
        app:layout_constraintEnd_toEndOf="@id/info_card"
        android:gravity="center"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cate1_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_200sdp"
            android:src="@color/white"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yuri-Fit"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableEnd="@drawable/ic_arrow_down_icon"
            android:drawablePadding="@dimen/_10sdp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/info_card"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <LinearLayout
                    android:id="@+id/exercise_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/exercise_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_exercises_icon"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/exercise_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Exercises"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/workout_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/workouts_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_workouts_icon"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/workouts_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Workouts"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nutrition_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/nutrition_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_nutrition_icon"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/nutrition_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Nutrition"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/Progress_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_progress"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/Progress_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Progress"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/personal_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/Personaltraining_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_personal_training"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/Personaltraining_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Personal Training"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/challenges_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/Challenges_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_challenges"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/Challenges_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Challenges"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:id="@+id/favourite_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/Favorites_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_favorites"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/Favorites_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Favorites"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/calendar_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/calendar_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_calender"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/calendar_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/calendar"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/today_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/TodayWorkout_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_todays_workout"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/TodayWorkout_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Today's Workout"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:id="@+id/shop_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/Shop_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_shop"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/Shop_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Shop"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/video_chat_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/VideoChat_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_video_chat"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/VideoChat_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Video Chat"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/live_chat_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/LiveChat_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_live_chat"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/LiveChat_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Live Chat"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:id="@+id/history_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/history_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_history"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/history_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="History"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/kyc_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/kyc_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_kyc"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/kyc_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="KYC"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contact_us_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ContactUS_title"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_contact_us"
                        android:padding="@dimen/_20sdp"
                        android:background="@drawable/background_main_category"/>

                    <TextView
                        android:id="@+id/ContactUS_icon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Contact Us"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_two"
    android:layout_gravity="center"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:fontFamily="@font/aeonikbold"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_20sdp"
        android:textSize="@dimen/_32sdp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_52sdp"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:textColorHint="@color/color_hint"
        app:hintTextAppearance="@style/Widget.Design.TextInputLayout">

        <EditText
            android:id="@+id/email_login_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/_8sdp"
            android:textCursorDrawable="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/color_hint" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_gravity="start"
        android:textColorHint="@color/color_hint"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:hintTextAppearance="@style/Widget.Design.TextInputLayout"
        app:passwordToggleTint="@color/white"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/password_login_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_8sdp"
            android:textCursorDrawable="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/color_hint" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_you_password"
        android:fontFamily="@font/aeonikregular"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:fontFamily="@font/aeonikregular"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="@string/login"
        android:textSize="@dimen/_14sdp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/or_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:fontFamily="@font/aeonikregular"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:textSize="@dimen/_15sdp"/>

    <Button
        android:id="@+id/googlelogin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/google_red"
        android:textColor="@color/white"
        android:fontFamily="@font/aeonikregular"
        android:layout_marginTop="@dimen/_25sdp"
        android:textSize="@dimen/_14sdp"
        android:text="@string/continue_with_google"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/_20sdp"/>


    <Button
        android:id="@+id/facebooklogin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/facebook_blue"
        android:textColor="@color/white"
        android:fontFamily="@font/aeonikregular"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:textSize="@dimen/_14sdp"
        android:text="@string/continue_with_facebook"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/signup_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/don_t_have_an_account_sign_up_here"
        android:fontFamily="@font/aeonikregular"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:textSize="@dimen/_12sdp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.FollowUsFragment"
    android:orientation="vertical"
    android:background="@color/backapp">

    <TextView
        android:id="@+id/titlefollowus_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow Us"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/aeonikbold"
        android:layout_margin="@dimen/_20sdp"/>

    <Button
        android:id="@+id/facebook_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_radius_10"
        android:drawableStart="@drawable/ic_layer_2"
        android:drawablePadding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="PT Platform"
        android:textAllCaps="false"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_10sdp"/>

    <Button
        android:id="@+id/instagram_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_radius_10"
        android:drawableStart="@drawable/ic_layer_3"
        android:drawablePadding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="PT Platform"
        android:textAllCaps="false"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_10sdp"/>

    <Button
        android:id="@+id/twitter_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_radius_10"
        android:drawableStart="@drawable/ic_layer_4"
        android:drawablePadding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="PT Platform"
        android:textAllCaps="false"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:visibility="gone"/>

</LinearLayout>
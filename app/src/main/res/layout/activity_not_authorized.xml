<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.NotAuthorizedActivity"
    android:background="@drawable/background_two"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/thank_you_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-150dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/aeonikbold"
                android:text="Not Authorized!"
                android:textColor="@color/white"
                android:textSize="@dimen/_27sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/aeonikbold"
                android:gravity="center"
                android:text="Please Subscribe to proceed!"
                android:textColor="@color/white"
                android:textSize="@dimen/_17sdp" />
            <Button
                android:id="@+id/subscribe_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_color"
                android:layout_margin="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Subscribe"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"/>
        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
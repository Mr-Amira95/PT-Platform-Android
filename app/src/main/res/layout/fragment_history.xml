<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragment.HistoryFragment"
    android:background="@color/backapp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/history"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/aeonikbold"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/workout_histry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:fontFamily="@font/aeonikregular"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="@string/workout_history"
        android:textSize="@dimen/_14sdp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:visibility="gone"/>

    <Button
        android:id="@+id/exercise_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:fontFamily="@font/aeonikregular"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="@string/exercise_history"
        android:textSize="@dimen/_14sdp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/workout_histry"/>


    <Button
        android:id="@+id/nutrition_histrory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:fontFamily="@font/aeonikregular"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="@string/nutrition_history"
        android:textSize="@dimen/_14sdp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/exercise_history"/>

</androidx.constraintlayout.widget.ConstraintLayout>
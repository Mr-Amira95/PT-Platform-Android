<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.SuccessFragment"
    android:orientation="vertical"
    android:background="@color/backapp"
    android:gravity="center">

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/ic_done_icon"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_sent"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:text="@string/your_request_is_awaiting_your_pt_s_approval_we_ll_notify_you_soon"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"/>

    <Button
        android:id="@+id/done_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/primary_color"
        android:text="@string/return_to_main_screen"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_margin="@dimen/_20sdp"/>

    <Button
        android:id="@+id/add_to_calender_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/txt_grey"
        android:text="@string/add_to_calender"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:visibility="gone"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragment.NutritionFragment"
    android:background="@color/backapp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/aeonikbold"
        android:layout_margin="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/target_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/view_history_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View History"
        android:textColor="@color/txt_grey"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:id="@+id/progressBar"
        android:indeterminate="false"
        android:layout_gravity="center_vertical"
        android:progressDrawable="@drawable/custom_green_progressbar"
        app:layout_constraintTop_toBottomOf="@id/target_txt"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@id/progressBar"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        android:src="@drawable/ic_edit_icon"
        android:layout_marginTop="@dimen/_5sdp"/>

    <ImageView
        android:id="@+id/cal_background"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:src="@drawable/ic_background_calories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        android:layout_marginTop="@dimen/_30sdp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/cal_text"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:text="@string/_100_cal"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="@id/cal_background"
        app:layout_constraintBottom_toBottomOf="@id/cal_background"
        app:layout_constraintStart_toStartOf="@id/cal_background"
        app:layout_constraintEnd_toEndOf="@id/cal_background"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/fat_background"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/ic_background_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cal_background"
        android:layout_marginTop="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/fat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_16_2g"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="@id/fat_background"
        app:layout_constraintBottom_toTopOf="@id/fat_value"
        app:layout_constraintStart_toStartOf="@id/fat_background"
        app:layout_constraintEnd_toEndOf="@id/fat_background"
        android:gravity="center"/>

    <TextView
        android:id="@+id/fat_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fat"
        android:textColor="@color/red"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/fat_title"
        app:layout_constraintBottom_toBottomOf="@id/fat_background"
        app:layout_constraintStart_toStartOf="@id/fat_background"
        app:layout_constraintEnd_toEndOf="@id/fat_background"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/carbs_background"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/ic_background_info"
        app:layout_constraintEnd_toStartOf="@id/fat_background"
        app:layout_constraintTop_toBottomOf="@id/cal_background"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/carbs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_4_1g"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="@id/carbs_background"
        app:layout_constraintBottom_toTopOf="@id/carbs_value"
        app:layout_constraintStart_toStartOf="@id/carbs_background"
        app:layout_constraintEnd_toEndOf="@id/carbs_background"
        android:gravity="center"/>

    <TextView
        android:id="@+id/carbs_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbs"
        android:textColor="@color/blue"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/carbs_title"
        app:layout_constraintBottom_toBottomOf="@id/carbs_background"
        app:layout_constraintStart_toStartOf="@id/carbs_background"
        app:layout_constraintEnd_toEndOf="@id/carbs_background"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/protein_background"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/ic_background_info"
        app:layout_constraintStart_toEndOf="@id/fat_background"
        app:layout_constraintTop_toBottomOf="@id/cal_background"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/protein_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_80_22g"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="@id/protein_background"
        app:layout_constraintBottom_toTopOf="@id/protein_value"
        app:layout_constraintStart_toStartOf="@id/protein_background"
        app:layout_constraintEnd_toEndOf="@id/protein_background"
        android:gravity="center"/>

    <TextView
        android:id="@+id/protein_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/protein_title"
        app:layout_constraintBottom_toBottomOf="@id/protein_background"
        app:layout_constraintStart_toStartOf="@id/protein_background"
        app:layout_constraintEnd_toEndOf="@id/protein_background"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/food_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/fat_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/suplements_layout"
        android:layout_marginTop="@dimen/_50sdp">

        <ImageView
            android:id="@+id/food_title"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:src="@drawable/ic_food_icon"
            android:padding="@dimen/_20sdp"
            android:background="@drawable/background_main_category"/>

        <TextView
            android:id="@+id/food_icon"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Food"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/primary_color"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/suplements_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/fat_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/food_layout"
        android:layout_marginTop="@dimen/_50sdp">

        <ImageView
            android:id="@+id/suplements_title"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:src="@drawable/ic_suplements_icon"
            android:padding="@dimen/_20sdp"
            android:background="@drawable/background_main_category"/>

        <TextView
            android:id="@+id/suplements_icon"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Suplements"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/primary_color"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calorie_calculator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/food_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/suplements_layout"
        android:layout_marginTop="@dimen/_20sdp">

        <ImageView
            android:id="@+id/calorie_calculator_title"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:src="@drawable/ic_calorie_calculator_icon"
            android:padding="@dimen/_20sdp"
            android:background="@drawable/background_main_category"/>

        <TextView
            android:id="@+id/calorie_calculator_icon"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="wrap_content"
            android:text="Calorie Calculator"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/primary_color"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Recipes_Diet_Plans_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/food_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/food_layout"
        android:layout_marginTop="@dimen/_20sdp">

        <ImageView
            android:id="@+id/Recipes_Diet_Plans__title"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:src="@drawable/ic_recips_diet_plans_icon"
            android:padding="@dimen/_20sdp"
            android:background="@drawable/background_main_category"/>

        <TextView
            android:id="@+id/Recipes_Diet_Plans_icon"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="wrap_content"
            android:text="Recipes and Diet Plans"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/primary_color"
            android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
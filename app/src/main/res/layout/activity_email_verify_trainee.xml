<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundtwo"
    tools:context=".View.Activity.TraineeSignIn.EmailVerifyTraineeActivity">

    <ImageView
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/logo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/aeonikbold"
        android:text="Please enter the verification
code that we have sent to your
email"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp" />


    <EditText
        android:id="@+id/firstname_edittext"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_35sdp"
        android:drawablePadding="@dimen/_12sdp"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/_8sdp"
        android:textCursorDrawable="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/white" />




    <TextView
        android:id="@+id/signup_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didnâ€™t receive one? Send again"
        android:fontFamily="@font/aeonikregular"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:textSize="@dimen/_12sdp"/>



    <Button
        android:id="@+id/next_verify_trainee_button"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/ic_button_login"
        android:textColor="@color/white"
        android:fontFamily="@font/aeonikregular"
        android:layout_marginTop="@dimen/_155sdp"
        android:text="Next"
        android:textSize="@dimen/_14sdp"
        android:textAllCaps="false"/>

</LinearLayout>
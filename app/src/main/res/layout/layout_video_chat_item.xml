<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#00000000"
    android:weightSum="100"
    >
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
      >
    <TextView
        android:id="@+id/session_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Chat"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/aeonikbold"
        android:layout_margin="@dimen/_2sdp"/>
        <TextView
            android:id="@+id/session_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:fontFamily="@font/aeonikbold"
            android:layout_margin="@dimen/_2sdp"/>
    </LinearLayout>
    <Button

        android:id="@+id/join_session_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:padding="5dp"
        android:background="@drawable/btn_rounded_green"
        android:gravity="center"
        android:text="Join Session"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/white" />
    <Button

        android:id="@+id/cancel_session_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="2dp"
        android:padding="5dp"
        android:background="@drawable/btn_rounded_green"
        android:gravity="center"
        android:text="Cancel Session"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/black" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_one"
    android:orientation="vertical"
    tools:context=".View.Activity.SignUpActivity">

    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/aeonikbold"
                android:text="@string/i_am_a"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/aeonikbold"
                android:text="@string/trainee"
                android:textColor="@color/white"
                android:textSize="@dimen/_27sdp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_gravity="start"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <EditText
                    android:id="@+id/firstname_coach_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="@string/first_name"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_8sdp"
                    android:textCursorDrawable="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_gravity="start"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout">

                <EditText
                    android:id="@+id/lastname_coach_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="@string/last_name"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_8sdp"
                    android:textCursorDrawable="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout">

                <EditText
                    android:id="@+id/email_coach_signup_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_8sdp"
                    android:textCursorDrawable="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout"
                app:passwordToggleTint="@color/white"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/password_signup_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_8sdp"
                    android:textCursorDrawable="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout"
                app:passwordToggleTint="@color/white"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/confirm_password_signup_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_8sdp"
                    android:textCursorDrawable="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mobile_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout"
                android:visibility="gone">

                <EditText
                    android:id="@+id/mobilenumber_coach_signup_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="@string/mobile_number"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_8sdp"
                    android:textCursorDrawable="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/social_media_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout"
                android:visibility="gone">

                <EditText
                    android:id="@+id/socialmedia_coach_signup_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="@string/social_media_link"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_8sdp"
                    android:textCursorDrawable="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/potential_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout"
                android:visibility="gone">

                <EditText
                    android:id="@+id/potential_coach_signup_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="@string/potential_clients"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_8sdp"
                    android:textCursorDrawable="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/submit_coach_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:fontFamily="@font/aeonikregular"
                android:layout_margin="@dimen/_20sdp"
                android:text="@string/next"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="false"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
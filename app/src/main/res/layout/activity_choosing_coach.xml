<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".View.Activity.ChoosingCoachActivity">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="@dimen/_165sdp"
        android:layout_height="wrap_content"
        android:text="Choose your
Trainer:"
        android:fontFamily="@font/aeonikbold"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textSize="@dimen/_27sdp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/title_text"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:background="@drawable/bordered_background"
            android:drawableEnd="@drawable/ic_search"
            android:hint="SEARCH TRAINER"
            android:padding="@dimen/_3sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_icon_awesome_filter" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/coach_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_25sdp"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1"
    tools:context=".View.Activity.TraineeSignIn.TraineeInfoSignupActivity">


    <ImageView
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/aeonikbold"
                android:text="I am a"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/aeonikbold"
                android:text="Trainee"
                android:textColor="@color/white"
                android:textSize="@dimen/_27sdp" />



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_15sdp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout">

                <EditText
                    android:id="@+id/firstname_edittext"
                    android:layout_width="365dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="First name"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_8sdp"
                    android:textCursorDrawable="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_15sdp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout">

                <EditText
                    android:id="@+id/Lastname_edittext"
                    android:layout_width="365dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="Last name"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_8sdp"
                    android:textCursorDrawable="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_15sdp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout">

                <EditText
                    android:id="@+id/email_signup_edittext"
                    android:layout_width="365dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_8sdp"
                    android:textCursorDrawable="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_15sdp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout"
                app:passwordToggleTint="@color/white"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/password_signup_edittext"
                    android:layout_width="365dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_8sdp"
                    android:textCursorDrawable="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/next_trainee_button"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/ic_button_login"
                android:textColor="@color/white"
                android:fontFamily="@font/aeonikregular"
                android:layout_marginTop="@dimen/_105sdp"
                android:text="Next"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="false"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
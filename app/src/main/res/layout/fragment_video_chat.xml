<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backapp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_chat"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/aeonikbold"
        android:layout_margin="@dimen/_20sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/booked_sessions"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_25sdp"/>

        <TextView
            android:id="@+id/emptytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please_book_a_session_from_calendar_first"
            android:gravity="center_horizontal"
            android:textColor="@color/txt_grey"
            android:textSize="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/video_chat_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"/>
    </LinearLayout>
</ScrollView>
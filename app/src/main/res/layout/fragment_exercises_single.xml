<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragment.ExercisesSingleFragment"
    android:background="@color/backapp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:src="@drawable/test_video"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_expand"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/_10sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_15sdp">

        <TextView
            android:id="@+id/add_to_favourite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Add to favourites"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:background="@drawable/background_radius_5"
            android:paddingVertical="@dimen/_5sdp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/add_to_workout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Add to todayâ€™s Workout"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:background="@drawable/background_radius_5"
            android:paddingVertical="@dimen/_5sdp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/add_to_log"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Add to log"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:background="@drawable/background_radius_5"
            android:paddingVertical="@dimen/_5sdp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/exercise_history"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Exercise History"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:background="@drawable/background_radius_5"
            android:paddingVertical="@dimen/_5sdp"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum."
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upper Chest"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="@dimen/_15sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/video_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/layout_video_item"
        android:layout_marginHorizontal="@dimen/_20sdp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.ResetPasswordActivity"
    android:background="@drawable/background_two">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_password"
        android:fontFamily="@font/aeonikbold"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:textSize="@dimen/_32sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:textColorHint="@color/white"
        app:hintTextAppearance="@style/Widget.Design.TextInputLayout"
        app:passwordToggleTint="@color/white"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="@dimen/_50sdp">

        <EditText
            android:id="@+id/password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_8sdp"
            android:textCursorDrawable="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cofirm_password"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:textColorHint="@color/white"
        app:hintTextAppearance="@style/Widget.Design.TextInputLayout"
        app:passwordToggleTint="@color/white"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="@dimen/_15sdp">

        <EditText
            android:id="@+id/confirm_password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_8sdp"
            android:textCursorDrawable="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:fontFamily="@font/aeonikregular"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="@string/confirm"
        android:textSize="@dimen/_14sdp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>